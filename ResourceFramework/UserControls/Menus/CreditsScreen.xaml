<UserControl x:Class="ResourceFramework.UserControls.Menus.CreditsScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:Controls="clr-namespace:ResourceFramework.UserControls.Additional"           
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas x:Name="canvasCreditsScreen">
		<Image x:Name="BackgroundImage" Source="../../Images/empty_wall.png" Height="1200" Width="1600" />
		
        <TextBlock Text="Kraak je Rot" Canvas.Left="400" Canvas.Top="100" FontSize="120" Foreground="Black" FontWeight="Bold"/>

        <Grid x:Name="stckGrid" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="12" Canvas.Top="300">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>
  
        <Controls:CreditHolder x:Name="creditsHolder" Canvas.Left="325" Canvas.Top="420" Height="470" Width="1170" Opacity="0.745" />
        <Controls:SignPost x:Name="SignPost" Height="950" Width="420" Canvas.Top="100" Canvas.Left="-200"/>
    </Canvas>
</UserControl>
